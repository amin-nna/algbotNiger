@model IEnumerable<algbotNiger.Models.Articles>

@{
    ViewData["Title"] = "Index";
}

<h2>Popular Post</h2>


@foreach (var item in Model)
{
   <div class="post-content" data-aos="flip-up" data-aos-delay="100">
       <div class="post-image">
           <div>
               <img src="@Html.DisplayFor(modelItem => item.MainImageSrc)" class="img">
           </div>
           <div class="post-info flex-row">
               <span>
                   <i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.PublishDate)
               </span>
           </div>
       </div>
       <div class="post-title">
           <a href="#">@Html.DisplayFor(model => item.Title)</a>
       </div>
   </div>
}
 
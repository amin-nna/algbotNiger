@using Microsoft.AspNetCore.Identity
@using algbotNiger.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-link">
            <!--
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            -->
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>

        </li>
        <a>Hello @UserManager.GetUserName(User)!</a>
        @if (User.IsInRole("Administrator"))
        {
            <li class="nav-link">
                <a  asp-area="" asp-controller="HotelChain" asp-action="Index">Administrator's Dashboard</a>
            </li>
        }
        @if (User.IsInRole("Employee"))
        {
            <li class="nav-link">
                <a asp-area="" asp-controller="Booking" asp-action="IndexEmployee">Employee's Dashboard</a>
            </li>
        }
        @if (User.IsInRole("Client"))
        {
            <li class="nav-link">
                <a asp-area="" asp-controller="Booking" asp-action="IndexClient">Customer's Dashboard</a>
            </li>
        }

        <li class="nav-link">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-link">
            <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-link">
            <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }

